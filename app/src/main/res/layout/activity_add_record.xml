<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_record_type"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_record_food"
        />

    <TextView
        android:id="@+id/tv_record_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/iv_record_type"
        app:layout_constraintRight_toRightOf="@id/iv_record_type"
        app:layout_constraintTop_toBottomOf="@id/iv_record_type"
        android:text="餐饮"
        android:textColor="@color/primary_font_color"
        />

    <EditText
        android:id="@+id/edt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="170dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_record_type"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_type"
        android:background="@null"
        android:inputType="numberDecimal"
        android:gravity="end"
        android:hint="0.00"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/tv_record_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_record_type"
        app:layout_constraintTop_toTopOf="@id/iv_record_type"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_type"
        android:layout_marginStart="40dp"
        android:text="+￥"
        android:textSize="30sp"
        android:textColor="@color/primary_font_color"
        />

    <TextView
        android:id="@+id/tv_record_title_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_record_type"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:text="记录标题"
        android:textColor="@color/primary_font_color"
        android:textSize="13sp"
        />

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_record_title_tag"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:theme="@style/MyEditText"
        android:textColorHighlight="@color/colorPrimary"
        android:hint="餐饮"
        android:textColorHint="@color/primary_hint_font_color"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#03A8F2"
        android:text="保存"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        />

</android.support.constraint.ConstraintLayout>
